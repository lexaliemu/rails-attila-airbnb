<%= simple_form_for [@movie] do |f| %>
  <%= f.input :title %>
  <%= f.input :release_date %>
  <%= f.input :duration %>
  <%= f.input :description %>
  <%= f.input :category %>
  <%= f.input :director %>
  <%= f.input :cover %>
  <%= f.input :cover_cache, as: :hidden %>
  <%= f.input :price %>
  <%= f.submit "add a movie", class: "btn btn-danger" %>
<% end %>
