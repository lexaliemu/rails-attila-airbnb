<%= simple_form_for [@movie] do |f| %>
  <%= f.input :title, placeholder: "Movie's title", label: false %>
  <%= f.input :release_date, placeholder: "Release date", label: false  %>
  <%= f.input :duration, placeholder: "Duration (in minutes)", label: false  %>
  <%= f.input :description, placeholder: "Movie's quick description", label: false %>
  <%= f.input :category, placeholder: "Category", label: false  %>
  <%= f.input :director, placeholder: "Director(s)", label: false %>
  <%= f.input :price, placeholder: "Renting price", label: false %>
  <%= f.input :cover, label: "Please upload a movie cover:"%>
  <%= f.input :cover_cache, as: :hidden %>
  <%= f.submit "Edit this movie!", class: "btn btn-danger" %>
<% end %>


