<%= simple_form_for [@movie] do |f| %>
  <%= f.input :title %>
  <%= f.input :release_date %>
  <%= f.input :duration %>
  <%= f.input :description %>
  <%= f.input :synopsis %>
  <%= f.input :director %>
  <%= f.input :cover %>
  <%= f.input :cover_cache, as: :hidden %>
  <%= f.input :price %>
  <%= f.submit "Edit", class: "btn btn-primary" %>
<% end %>
