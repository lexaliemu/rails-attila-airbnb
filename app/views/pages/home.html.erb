<div class="wrapper">
  <div class="container">

    <div class="header">
      <h1>Attila</h1>

    </div>

    <div style="background-image: url('<%= image_path ("home-banner.jpg")%>')" class="banner">
      <div class="banner-content">
        <h3><span id="banner-typed-text"></span></h3>
        <%= link_to "See all movies", movies_path, class: "btn btn-danger btn-lg" %>
      </div>
    </div>

    <div class="row text-center">
      <% @movies.each do |movie| %>
        <div class="col-md-4">
          <div class="card-movie">
            <%= cl_image_tag movie.cover, width: 320, height: 175, crop: :thumb, gravity: :face %>
            <div class="card-movie-elements">
              <p id="movie-title"><%=h truncate(movie.title, :length => 25) %></p>
              <p> Duration: <%= movie.duration %></p>
              <div class="same-line">
                <span class="stars"><%= movie.rating/2 %></span>
                <p><%= movie.price %>â‚¬</p>
              </div>
            </div>
            <%= link_to "", movie_path(movie), class: 'card-link' %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
